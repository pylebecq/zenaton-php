{
    "name": "zenaton/zenaton-php",
    "description": "Zenaton PHP library",
    "autoload": {
        "psr-4" : {
            "Zenaton\\" : "src/Zenaton/"
        },
        "files": [
            "src/Zenaton/functions.php"
        ]
    },
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": ">=5.4.0",
        "nesbot/carbon": "~1.22",
        "vlucas/phpdotenv": "^2.4",
        "symfony/console": "^3.3",
        "nategood/httpful": "~0.2",
        "jeremeamia/superclosure": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "scripts": {
        "post-install-cmd": [
            "@installZenatonScript"
        ],
        "pre-update-cmd": [
            "@installZenatonScript"
        ],
        "installZenatonScript": "cp -f ./vendor/zenaton/zenaton-php/zenaton .; chmod +x ./zenaton"
    }
}
